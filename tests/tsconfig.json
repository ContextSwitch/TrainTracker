{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "types": ["mocha", "chai", "sinon", "node", "jsdom"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ES2020",
    "jsx": "react-jsx",
    "allowJs": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["../*"]
    }
  },
  "include": [
    "./**/*.ts",
    "./**/*.tsx",
    "./**/*.js",
    "./**/*.jsx"
  ],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
